RUN pip install -r ./requirements/requirements.txt
RUN pip install -r ./requirements/mock-requirements.txt

EXPOSE 4343

ENTRYPOINT ["python", "/var/www/lambda_functions/v1/functions/lpa_codes/app/lpa_codes_mock.py"]
